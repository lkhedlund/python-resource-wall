<header>
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in">Welcome to Nova.</div>
      <div class="intro-heading">Sign-Up</div>
    </div>

    <div class="row ltgray">
      <div class="col-md-4 col-md-offset-4">
        <form role="form" method="post" action="/users">
          <div class="form-group">
            <label for="username">Username: </label>
            <input class="form-control" id="username" name="user[username]" />
          </div>
          <div class="form-group">
            <label for="email">Email: </label>
            <input class="form-control" id="email" name="user[email]" />
          </div>
          <div class="form-group">
            <label for="password">Password: </label>
            <input class="form-control" type="password" id="password" name="user[password]" />
          </div>
          <div class="form-group">
            <button class="btn btn-default">Sign up</button>
          </div>
        </form>
      </div>
    </div>

  </div>
</header>