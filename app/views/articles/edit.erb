<div class="row ltgray">
  <div class="col-md-6 col-md-offset-3">
    <h1>Post An Article</h1>
    <form method="post" action="/articles/edit">
      <div class="form-group">
        <label for="title">Title:</label>
          <input type="text" class="form-control" id="title" name="article[title]" placeholder="Article title" <% if @url && @url.title %>value="<%= @url.title %>"<% end %>>
      </div>
      <div class="form-group">
        <label for="url">URL:</label>
        <input type="url" class="form-control" id="url" name="article[url]" placeholder="Article URL" <% if @url && @url.url %>value="<%= @url.url %>"<% else %>value="<%= @url_backup %>"<% end %>>
      </div>
      <div class="form-group">
        <label for="image">Image:</label>
        <input type="url" class="form-control" id="image" name="article[image]" placeholder="Image URL" <% if @url && @url.image %>value="<%= @url.image %>"<% end %>>
      </div>
      <div class="form-group">
        <label for="summary">Summary:</label>
        <textarea class="form-control" rows="3" id="summary" name="article[summary]" placeholder="Summary"><% if @url && @url.description %><%= @url.description %><% end %></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-info">Post</button>
      </div>
      </div>
    </form>
  </div>
</div>